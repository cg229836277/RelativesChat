<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="8dp" />

            <stroke android:width="1dp" android:color="@color/blue_dodger" />

            <gradient android:angle="180" android:endColor="@color/blue_dodger" android:startColor="@color/blue_dodger" />
            <padding android:left="18dp" android:top="6dp" 
                android:right="18dp" android:bottom="6dp" />
        </shape></item>
    <item><shape>
            <corners android:radius="8dp" />

            <stroke android:width="1dp" android:color="@color/blue_dodger" />

            <gradient android:angle="180" android:endColor="@color/white" android:startColor="@color/white" />
            <padding android:left="18dp" android:top="6dp" 
                android:right="18dp" android:bottom="6dp" />
        </shape></item>

</selector>