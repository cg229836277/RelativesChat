<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal" >
    
    <LinearLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:orientation="vertical">
	    <ImageView android:id="@+id/share_photo_icon"
	        android:layout_width="fill_parent"
	        android:layout_weight="0.8"
	        android:layout_height="0dp"
	        android:layout_gravity="center"
	        android:background="@drawable/share_photo_selector"/>
	    <TextView android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.2"
	        android:gravity="center"
	        android:text="照片"
	        android:textColor="#D56FF4"/>
    </LinearLayout>
    
        <LinearLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:orientation="vertical">
	    <ImageView android:id="@+id/share_music_icon"
	        android:layout_width="fill_parent"
	        android:layout_weight="0.8"
	        android:layout_height="0dp"
	        android:layout_gravity="center"
	        android:background="@drawable/share_music_selector"/>
	    <TextView android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.2"
	        android:gravity="center"
	        android:text="音乐"
	        android:textColor="#F09DEB"/>
    </LinearLayout>
    
            <LinearLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:orientation="vertical">
	    <ImageView android:id="@+id/share_video_icon"
	        android:layout_width="fill_parent"
	        android:layout_weight="0.8"
	        android:layout_height="0dp"
	        android:layout_gravity="center"
	        android:background="@drawable/share_video_selector"/>
	    <TextView android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.2"
	        android:gravity="center"
	        android:text="短视频"
	        android:textColor="#F976B1"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:orientation="vertical">
	    <ImageView android:id="@+id/share_file_icon"
	        android:layout_width="fill_parent"
	        android:layout_weight="0.8"
	        android:layout_height="0dp"
	        android:layout_gravity="center"
	        android:background="@drawable/share_file_selector"/>
	    <TextView android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.2"
	        android:gravity="center"
	        android:text="文件"
	        android:textColor="#DFEE77"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:orientation="vertical">
	    <ImageView android:id="@+id/share_sound_icon"
	        android:layout_width="fill_parent"
	        android:layout_weight="0.8"
	        android:layout_height="0dp"
	        android:layout_gravity="center"
	        android:background="@drawable/share_sound_selector"/>
	    <TextView android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.2"
	        android:gravity="center"
	        android:text="录音"
	        android:textColor="#33B5E5"/>
    </LinearLayout>
</LinearLayout>
