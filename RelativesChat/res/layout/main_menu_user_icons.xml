<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_user_icons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/first_user_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.45"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/first_user_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/first_user_name"
            style="@style/text_medium_white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>
    
    <View android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.05" />

    <LinearLayout
        android:id="@+id/second_user_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.45"
        android:orientation="vertical" >

         <ImageView
            android:id="@+id/second_user_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/second_user_name"
            style="@style/text_medium_white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>