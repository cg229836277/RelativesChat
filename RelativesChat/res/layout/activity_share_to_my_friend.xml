<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/share_file_to_friends_layout"
        layout="@layout/friends_menu_header_layout" />

    <TextView
        style="@style/text_xlarge_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="好友档案" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/friend_icon_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:id="@+id/friends_name_detail_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_medium_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/my_friends_name" />

            <TextView
                android:id="@+id/my_friends_name_text"
                style="@style/text_medium_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.6"
                android:gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friends_sign_detail_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_medium_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/my_friends_sign" />

            <TextView
                android:id="@+id/my_friends_sign_text"
                style="@style/text_medium_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="0.6"
                android:gravity="left" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/text_xlarge_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="分享" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_background"
        android:orientation="horizontal" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:layout_margin="2dp"
            layout="@layout/share_content_icons_layout" />
    </LinearLayout>

</LinearLayout>