<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selfdefine_toast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MyDialogActivity" >

    <TextView
        android:id="@+id/dialog_title_text"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue_sky"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/dialog_content_text"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/dialog_title_text"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <View
        android:id="@+id/title_red_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/dialog_content_text"
        android:background="@drawable/base_horizontal_line_red" />

    <LinearLayout
        android:id="@+id/button_collection_layout"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/title_red_line"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancle_dialog_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@drawable/dialog_btn_selector"
            android:gravity="center"
            android:text="@string/cancle"
            android:textSize="24sp" />
        
        <LinearLayout
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:background="@drawable/base_horizontal_line_red" />

        <Button
            android:id="@+id/commit_dialog_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@drawable/dialog_btn_selector"
            android:gravity="center"
            android:text="@string/commit"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>