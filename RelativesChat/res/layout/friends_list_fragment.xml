<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_background" >    
    
    <include layout="@layout/friends_menu_header_layout"
        android:id="@+id/friends_menu_header_list_layout"/>
    
	<ListView android:id="@+id/friends_list_view"
	    android:layout_below="@+id/friends_menu_header_list_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:descendantFocusability="afterDescendants"
        android:divider="@drawable/base_horizontal_line"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="false"/>
</RelativeLayout>
