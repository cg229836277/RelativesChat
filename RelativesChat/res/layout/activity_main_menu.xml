<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity" >

    <LinearLayout android:id="@+id/menu_of_main_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">"
	    <TextView
	        android:id="@+id/relatives_friends_list_text"
	        android:layout_width="0dp"
	        android:layout_weight="0.3333"
	        android:layout_height="wrap_content"
	        android:textColor="@color/blue_sky"
	        android:textSize="24sp"
	        android:gravity="center"
	        android:text="@string/relatives_friends_list_text" />
	    <TextView
	        android:id="@+id/relatives_friends_activity_text"
	        android:layout_width="0dp"
	        android:layout_weight="0.3333"
	        android:layout_height="wrap_content"
	        android:textColor="@color/blue_sky"
	        android:textSize="24sp"
	        android:gravity="center"
	        android:text="@string/relatives_friends_activity_text" />
	    <TextView
	        android:id="@+id/more_info_text"
	        android:layout_width="0dp"
	        android:layout_weight="0.3333"
	        android:layout_height="wrap_content"
	        android:textColor="@color/blue_sky"
	        android:textSize="24sp"
	        android:gravity="center"
	        android:text="@string/more_info_text" />
    </LinearLayout>

</RelativeLayout>
